[data-tooltip]
    position relative !important
    cursor help

    &:hover
        &::before
            content attr(data-tooltip)
            position absolute
            display inline-block
            padding 3px 6px
            background #fff
            color #000
            min-width 200px
            max-width 500px
            border 1px solid #000
            z-index 2
            left 0

        &::after
            content ''
            position absolute
            top 10px
            left -22px
            display inline-block
            color #fff
            border 10px solid transparent
            border-right 12px solid #000
            

